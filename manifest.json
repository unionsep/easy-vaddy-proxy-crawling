{
    "manifest_version": 2,
    "name": "Easy VAddy Proxy Crawling",
    "description": "Easy operation of VAddy Proxy Crawling",
    "homepage_url": "https://github.com/unionsep/easy-vaddy-proxy-crawling",
    "version": "1.0",
    "icons": {
        "48": "icons/blue_48.png",
        "96": "icons/blue_96.png"
    },
    "browser_action": {
        "default_title": "Easy VAddy Proxy Crawling",
        "default_icon": {
            "19": "icons/blue_19.png",
            "38": "icons/blue_38.png"
        }
    },
    "background": {
        "scripts": ["libs/jquery-3.3.1.min.js", "background.js"]
    },
    "options_ui": {
        "page": "options/options.html"
    },
    "permissions": ["https://*/*", "tabs", "storage", "notifications"]
}